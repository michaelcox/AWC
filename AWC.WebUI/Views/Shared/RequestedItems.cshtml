@model List<AWC.Domain.Entities.RequestedItem>

@for (int i = 0; i < Model.Count; i++)
{
    var item = Model[i];
    if (item.IsActive && (item.QuantityRequested > item.QuantityReceived))
    {
        <span class="no-break">@item.QuantityRequested @item.ItemName</span>
    }
    else
    {
        <span class="no-break done">@item.QuantityRequested @item.ItemName</span>
    }
    if ((i + 1) < Model.Count)
    {
        <span>, &nbsp;</span>
    }
}