<!doctype html>
<!--[if lt IE 7]> <html class="no-js ie6 oldie" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js ie7 oldie" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js ie8 oldie" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@ViewBag.Title | A Wider Circle</title>

    <!-- CSS: implied media="all" -->
    <link rel="stylesheet" href="@Url.Content("~/Public/css/global.css?ver=1.0")" />
    <!-- jQuery Calendar -->
    <link rel="stylesheet" href="@Url.Content("~/Public/fullcalendar/fullcalendar.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Public/fullcalendar/fullcalendar.print.css")" media="print" />

    <!-- All JavaScript at the bottom, except for Modernizr and Respond.
       Modernizr enables HTML5 elements & feature detects; Respond is a polyfill for min/max-width CSS3 Media Queries
       For optimal performance, use a custom Modernizr build: www.modernizr.com/download/ -->
    <script src="@Url.Content("~/Public/js/libs/modernizr-2.0.6.min.js")"></script>
</head>
<body>
    <header>
        <div>
            <h1 class="logo"><a href="/">A Wider Circle</a></h1>
            <nav>
                <ul class="menu-primary">
                    @Html.ActionMenuItem("Dashboard", "Index", "Dashboard", true, null)
                    @Html.ActionMenuItem("Clients", "Create", "Clients", true, null)
                    @Html.ActionMenuItem("Wait List", "Index", "Waitlist", false, null)
                    @Html.ActionMenuItem("Schedule", "Confirmed", "Schedule", true, null)
                </ul>
            </nav>
            <section>
                <form action="/search" method="post" class="search">
                    <input type="text" id="search" name="term" value="QUICK SEARCH" class="text" />
                    <input type="hidden" id="searchClientId" name="clientId"/>
                    <input type="submit" value="go" class="btn-go" />
                </form>
            </section>
        </div>
    </header>
    <section id="content">
        <div class="container">
            @{Html.RenderPartial("FlashMessage");}
            
            @RenderBody()
        </div>
        <div class="b"><!--spacer--></div>
    </section>

    <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if necessary -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="js/libs/jquery-1.6.2.min.js">\x3C/script>')</script>

    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.8.11/jquery-ui.js"></script>
    <script src="@Url.Content("~/Public/js/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Public/js/jquery.validate.unobtrusive.min.js")"></script>
    <script src="@Url.Content("~/Public/js/jquery.maskedinput-1.3.min.js")"></script>
    <script src="@Url.Content("~/Public/js/jquery.form.js")"></script>
    <script src="@Url.Content("~/Public/js/script.js")"></script>
    
    <!-- jQuery Calendar -->
    <script src="@Url.Content("~/Public/fullcalendar/fullcalendar.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Public/fullcalendar/gcal.js")" type="text/javascript"></script>

    <!-- Prompt IE 6 users to install Chrome Frame. Remove this if you want to support IE 6.
            chromium.org/developers/how-tos/chrome-frame-getting-started -->
    <!--[if lt IE 7 ]>
    <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.3/CFInstall.min.js"></script>
    <script>window.attachEvent('onload',function(){CFInstall.check({mode:'overlay'})})</script>
    <![endif]--> 
 
</body>
</html>