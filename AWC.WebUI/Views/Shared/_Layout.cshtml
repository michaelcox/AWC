<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title | A Wider Circle</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="@Url.Content("~/Public/images/favicon.ico")" />

    <!--Stylesheets-->
    <link rel="stylesheet" href="@Url.Content("~/Public/css/global.css")" />

    <!--Scripts-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js" type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.11/jquery-ui.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Public/js/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Public/js/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Public/js/jquery.maskedinput-1.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Public/js/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Public/js/jquery.main.js")" type="text/javascript"></script>
    <!--[if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->

    <!-- jQuery Calendar -->
    <link rel="stylesheet" href="@Url.Content("~/Public/fullcalendar/fullcalendar.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Public/fullcalendar/fullcalendar.print.css")" media="print" />
    <script src="@Url.Content("~/Public/fullcalendar/fullcalendar.min.js")" type="text/javascript" language="javascript"></script>
    <script src="@Url.Content("~/Public/fullcalendar/gcal.js")" type="text/javascript" language="javascript"></script>
</head>
<body>
    <header id="header">
        <div class="container">
            <h1 class="logo"><a href="/">A Wider Circle</a></h1>
            <nav>
                <ul class="menu-primary">
                    @Html.ActionMenuItem("Dashboard", "Index", "Dashboard", true, null)
                    @Html.ActionMenuItem("Clients", "Create", "Clients", true, null)
                    @Html.ActionMenuItem("Wait List", "Index", "Waitlist", false, null)
                    @Html.ActionMenuItem("Schedule", "Confirmed", "Schedule", true, null)
                </ul>
            </nav>
            <section>
                <nav>
                    <ul class="menu-links">
                        <li>Hi, <em>Member Name</em></li>
                        <li><a href="#">Edit Profile</a></li>
                        <li><a href="#">Logout</a></li>
                    </ul>
                </nav>
                <form action="/search" method="post" class="search">
                    <input type="text" id="s" name="q" value="QUICK SEARCH" class="text" />
                    <input type="submit" value="go" class="btn-go" />
                </form>
            </section>
        </div>
    </header>
    <section id="content">
        <div class="container">
            @{Html.RenderPartial("FlashMessage");}
            
            @RenderBody()
        </div>
        <div class="b"><!--spacer--></div>
    </section>
</body>
</html>