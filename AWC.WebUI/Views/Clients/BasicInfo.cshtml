@model AWC.WebUI.Models.ClientEditViewModel

@{
    ViewBag.Title = Model.FirstName + " " + Model.LastName;
}

<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        $("#PrimaryPhoneNumber").mask("(999) 999-9999");
        $("#SecondaryPhoneNumber").mask("(999) 999-9999");
    });
</script>

<nav class="menu">
    <ul>
        <li class="current_page_item">@Html.ActionLink("Basic Info", "BasicInfo", new { id = Model.ClientId })</li>
        <li>@Html.ActionLink("Partner Info", "PartnerInfo", new { id = Model.ClientId })</li>
    </ul>
</nav>

<h2>Basic Information for <em>@Model.FirstName @Model.LastName</em></h2>

@using (Html.BeginForm())
{
    Html.ValidationSummary(true);
                                 
    Html.RenderPartial("EditClient", Model);

    <input type="submit" value="Save" class="button" />
 }

@{Html.RenderAction("ClientNotes", new { id = Model.ClientId, refAction = "BasicInfo" });}