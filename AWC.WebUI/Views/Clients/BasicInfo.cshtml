@model AWC.WebUI.Models.ClientEditViewModel

@{
    ViewBag.Title = Model.FirstName + " " + Model.LastName;
}

<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        $("#PrimaryPhoneNumber").mask("(999) 999-9999");
        $("#SecondaryPhoneNumber").mask("(999) 999-9999");
    });
</script>

<h2>Edit Client Record for <em>@Model.FirstName @Model.LastName</em></h2>

<p>
    @Html.ActionLink("Edit Partner Info", "PartnerInfo", new { id = Model.ClientId })
</p>

@using (Html.BeginForm())
{
    Html.ValidationSummary(true);
                                 
    Html.RenderPartial("EditClient", Model);

    <p>
        <input type="submit" value="Save" />
    </p>
 }

@{Html.RenderAction("ClientNotes", new { id = Model.ClientId, refAction = "BasicInfo" });}