@model AWC.Domain.Entities.RequestedItem
           
@{
    Layout = null;
}

@if (Model.QuantityReceived == 0)
{
    <tr>
        @using (Html.BeginCollectionItem("requestedItems"))
        {
            <td class="item_name">@Html.EditorFor(model => model.ItemName)</td>
            <td>@Html.EditorFor(model => model.QuantityRequested)</td>
        }
        <td><a href="#" class="deleteRow">Remove</a></td>
    </tr>
}
else
{
    <tr>
        <td>@Model.ItemName</td>
        <td>@Model.QuantityRequested</td>
        <td><em>Received</em></td>
    </tr>
}

